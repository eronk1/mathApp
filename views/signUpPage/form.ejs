<section class="signPage">
  <div class="form">
    <form id="form" action="/signUp" method="post">
      <div class="username">
        <label for="Username" id="username">Username</label>
        <input name="Username" id="usernameInput" placeholder="Mathgamer1234" type="text" minlength="3" maxlength="16">
      </div>
  
      <div class="password">
        <label id="password" for="Password">Password</label>
        <input name="Password" id="passwordInput" placeholder="Password" type="password" minlength="6" maxlength="20">
      </div>
      <div class="confirmPassword">
        <label id="confirmPassword" for="password">Confirm Password</label>
        <input name="confirmPassword" id="confirmPasswordInput" placeholder="Confirm Password" type="password" minlength="6" maxlength="20">
      </div>
      <p class="errorText"></p>
      <button type="button" id="submitButton">Sign Up!</button>
    </form>
  </div>
</section>