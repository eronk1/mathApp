<section class="signPage">
  <div class="form">
    <form action="/signUp" method="post">
      <div class="username">
        <label for="Username" id="username">Username</label>
        <input id="usernameInput" placeholder="Mathgamer1234" type="text" minlength="3" maxlength="16">
      </div>
  
      <div class="password">
        <label id="password" for="Password">Password</label>
        <input id="passwordInput" placeholder="Password" type="password" minlength="6" maxlength="16">
      </div>
      <div class="confirmPassword">
        <label id="confirmPassword" for="password">Confirm Password</label>
        <input id="confirmPasswordInput" placeholder="Confirm Password" type="password" minlength="6" maxlength="16">
      </div> 
      <button type="submit" id="submitButton">Sign Up!</button>
    </form>
  </div>
</section>